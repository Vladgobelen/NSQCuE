{
  "name": "night-watch-updater",
  "version": "1.0.0",
  "description": "Addon manager for World of Warcraft",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win64": "electron-builder --win portable --x64"
  },
  "build": {
    "appId": "com.nightwatch.updater",
    "productName": "Night Watch Updater",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "unicode": true,
      "warningsAsErrors": false
    }
  },
  "dependencies": {
    "@napi-rs/cli": "^3.3.0",
    "axios": "^1.6.8",
    "fs-extra": "^11.2.0",
    "mediasoup-client": "^3.16.1",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3"
  }
}
